<!-- checkout page -->
<div class="privacy">
  <div class="container">
    <!-- tittle heading -->
    <h3 class="tittle-w3l">Checkout
      <span class="heading-style">
        <i></i>
        <i></i>
        <i></i>
      </span>
    </h3>
    <!-- //tittle heading -->
    <div class="checkout-right">
      <h4>Your shopping cart contains:
        <span><%= @order_items.count %>
          Products</span>
      </h4>
      <div class="table-responsive">
        <table class="timetable_sub">
          <thead>
            <tr>
              <th>SL No.</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Product Name</th>

              <th>Price</th>
              <th>Remove</th>
            </tr>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
            <%= render 'home/checkout', product: order_item.product, order_item: order_item, show_total: true %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="checkout-left">
      <div class="address_form_agile">
        <% if @deliveryaddress != nil%>
        <h4>Your Delivery Details</h4>
        <div class="table-responsive">

          <table class="table">
            <thead>
              <tr>
                <th>Full name</th>
                <th>Mobile number</th>
                <th>Town</th>
                <th>Landmark</th>
                <th>Email</th>
                <th>Address type</th>
                <th>Id number</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody></div>
            <tr>
              <td><%= @deliveryaddress.full_name %></td>
              <td><%= @deliveryaddress.mobile_number %></td>
              <td><%= @deliveryaddress.town %></td>
              <td><%= @deliveryaddress.landmark %></td>
              <td><%= @deliveryaddress.email %></td>
              <td><%= @deliveryaddress.address_type %></td>
              <td><%= @deliveryaddress.id_number %></td>
            </tr>
          </tbody>
        </table>
      <% else %>
        <h4>Add new Details</h4>
        <%= render 'deliveries/form'%>
        <% end %>
      </div>
    </div>
    <div class="checkout-right-basket">
      <a href="/payment">Make a Payment
        <span class="fa fa-hand-o-right" aria-hidden="true"></span>
      </a>
    </div><br><br>
  </div>
</div>

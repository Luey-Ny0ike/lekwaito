<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Mobile number</th>
      <th>Town</th>
      <th>Landmark</th>
      <th>Email</th>
      <th>Address type</th>
      <th>Id number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.full_name %></td>
        <td><%= delivery.mobile_number %></td>
        <td><%= delivery.town %></td>
        <td><%= delivery.landmark %></td>
        <td><%= delivery.email %></td>
        <td><%= delivery.address_type %></td>
        <td><%= delivery.id_number %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

